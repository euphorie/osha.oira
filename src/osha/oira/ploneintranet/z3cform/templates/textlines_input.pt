<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      tal:omit-tag=""
      i18n:domain="nuplone"
>
  <fieldset class="group ${view/@@dependencies}">

    <legend>${view/label}</legend>
    <label class="${python:'error' if view.error is not None else None}">
      <textarea class="${view/klass}"
                id="${view/id}"
                cols="${view/cols}"
                disabled="${view/disabled}"
                name="${view/name}"
                readonly="${view/readonly}"
                rows="${view/rows}"
                tal:content="structure view/value"
      ></textarea>
      <dfn class="infoPanel"
           title="Information"
           tal:define="
             description view/field/description;
           "
           tal:condition="description"
           i18n:attributes="title"
      >${description}</dfn>
    </label></fieldset>

  <section class="help"
           tal:condition="view/error"
  >
    <div class="pat-message warning"
         tal:content="structure view/error/render"
    ></div>
  </section>
</html>
