<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      tal:omit-tag=""
      i18n:domain="nuplone"
>
  <fieldset class="concise ${view/@@dependencies}">
    <legend>${view/label}
      <sup class="required"
           tal:condition="view/required"
      >*</sup></legend>
    <dfn class="infoPanel"
         title="Information"
         tal:define="
           description view/field/description;
         "
         tal:condition="description"
         i18n:attributes="title"
    >${description}</dfn>
    <tal:field repeat="widget view/subform/widgets/values"
               replace="structure widget/render"
    />
    <input name="${view/name}-empty-marker"
           type="hidden"
           value="1"
    />
    <button class="remove jsOnly micro floatAfter"
            type="button"
            i18n:translate=""
    >Remove</button>
  </fieldset>
</html>
