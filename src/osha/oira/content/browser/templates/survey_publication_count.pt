<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xmlns:meta="http://xml.zope.org/namespaces/meta"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      metal:use-macro="context/@@layout/macros/layout"
      i18n:domain="euphorie"
>
  <body>
    <metal:title fill-slot="title">
      Survey Publication Count
    </metal:title>

    <metal:buttonbar fill-slot="buttonbar">
      <a href="${context/absolute_url}/@@survey-publication-count.csv">Download</a>
    </metal:buttonbar>

    <metal:content fill-slot="content">
      <div class="main-content">
        <table tal:define="fieldnames view/fieldnames">
          <tr>
            <th tal:repeat="fieldname fieldnames" tal:content="fieldname"/>
          </tr>
          <tr tal:repeat="row view/survey_details">
            <td tal:repeat="value python:row[col] for col in fieldnames" tal:content="value"/>
          </tr>
        </table>
      </div>
    </metal:content>

  </body>

</html>
