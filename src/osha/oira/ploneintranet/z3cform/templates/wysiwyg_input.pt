<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xmlns:meta="http://xml.zope.org/namespaces/meta"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      meta:interpolation="true"
      tal:omit-tag=""
      i18n:domain="nuplone"
>
  <fieldset class="group ${view/@@dependencies}">
    <legend title="${view/field/description}">
      <span tal:replace="view/label"></span>
    </legend>
    <textarea class="${view/klass} pat-tiptap"
              id="${view/id}"
              cols="${view/cols}"
              disabled="${view/disabled}"
              name="${view/name}"
              readonly="${view/readonly}"
              rows="${view/rows}"
    >${view/value}</textarea>
    <dfn class="infoPanel"
         title="Information"
         tal:define="
           description view/field/description;
         "
         tal:condition="description"
         tal:content="description"
         i18n:attributes="title"
    ></dfn>
  </fieldset>

  <section class="help"
           tal:condition="view/error"
  >
    <div class="pat-message warning"
         tal:content="structure view/error/render"
    ></div>
  </section>

</html>
