<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      tal:omit-tag=""
      i18n:domain="nuplone"
>
  <fieldset class="concise multiWidget ${view/@@dependencies}">
    <legend>${view/label}
      <sup class="required"
           tal:condition="view/required"
      >*</sup></legend>
    <dfn class="infoPanel"
         title="Information"
         tal:define="
           description view/field/description;
         "
         i18n:attributes="title"
    >${description}</dfn>
    <input type="hidden"
           tal:replace="structure view/counterMarker"
    />
    <tal:field repeat="widget view/widgets"><tal:widget condition="python:widget.mode!='hidden'"
                  replace="structure widget/render"
      /></tal:field>
    <button class="add jsOnly"
            type="button"
            value="${view/form/action}/++widget++${view/field/__name__}/new-entry"
            i18n:translate=""
    >Add new</button>
  </fieldset>
</html>
